{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./out/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "#enterprise/*": [
        "src/1-enterprise/*"
      ],
      "#application/*": [
        "src/2-application/*"
      ],
      "#interface/*": [
        "src/3-interface/*"
      ],
      "#framework/*": [
        "src/4-framework/*"
      ],
      "#test/*": [
        "test/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
