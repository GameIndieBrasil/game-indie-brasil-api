{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "outDir": "./out/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "#enterprise/*": [
        "src/1-enterprise/*"
      ],
      "#application/*": [
        "src/2-application/*"
      ],
      "#interface/*": [
        "src/3-interface/*"
      ],
      "#framework/*": [
        "src/4-framework/*"
      ],
      "#test/*": [
        "test/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
