{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./out/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "#domain/*": [
        "src/1-domain/*"
      ],
      "#business/*": [
        "src/2-business/*"
      ],
      "#controller/*": [
        "src/3-controller/*"
      ],
      "#framework/*": [
        "src/4-framework/*"
      ],
      "#test/*": [
        "test/*"
      ]
    }
  }
}
